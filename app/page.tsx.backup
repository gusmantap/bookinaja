    if (!value) {
      setError('');
      setSuccess('');
      return;
    }

    setIsChecking(true);
    setError('');
    setSuccess('');

    // Simulate API call - nanti ganti dengan real API
    await new Promise(resolve => setTimeout(resolve, 500));

    // Check if subdomain is valid
    const pattern = /^[a-z0-9-]+$/;
    if (!pattern.test(value)) {
      setError('Hanya huruf kecil, angka, dan dash (-)');
      setIsChecking(false);
      return;
    }

    // Check if subdomain is taken (dummy check)
    const takenSubdomains = ['komet', 'jenanail', 'memorias', 'admin', 'api', 'www'];
    if (takenSubdomains.includes(value.toLowerCase())) {
      setError('Subdomain sudah digunakan');
      setIsChecking(false);
      return;
    }

    setSuccess('Subdomain tersedia!');
    setIsChecking(false);
  };

